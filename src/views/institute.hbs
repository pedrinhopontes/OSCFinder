<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{institute.name}} | OSCFinder</title>

    <link
      rel="stylesheet"
      href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
      integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
      crossorigin=""
    />

    <!-- Make sure you put this AFTER Leaflet's CSS -->
    <script
      src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
      integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
      crossorigin=""
    ></script>

    <link rel="icon" href="/images/logo-icon.png" />

    <link rel="stylesheet" href="/css/main.css" />
    <link rel="stylesheet" href="/css/animations.css" />
    <link rel="stylesheet" href="/css/sidebar.css" />
    <link rel="stylesheet" href="/css/map.css" />
    <link rel="stylesheet" href="/css/buttons.css" />
    <link rel="stylesheet" href="/css/page-institute.css" />

    <link
      href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700;800&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div id="page-institute">
      <aside class="animate-right sidebar">

        <img src="/images/map-marker.svg" alt="ONG" />

        <footer>
          <button onclick="history.back()">
            <img src="/images/arrow-back.svg" alt="Voltar" />
          </button>
        </footer>

      </aside>

      <main class="animate-appear with-sidebar">
        <div class="institute-details">
          <img src="{{institute.firstImage}}" alt="{{institute.images}}" />

          <div class="images">
            {{#each institute.images}}
              <button onclick="selectImage(event)" class="active" type="button">
                <img src="{{this}}" alt="{{institute.name}}" />
              </button>
            {{/each}}

          </div>

          <div class="institute-details-content">
            <h1>{{institute.name}}</h1>

            <p>{{institute.about}}</p>

            <div class="map-container">
              <div id="mapid"></div>
              <span data-lat="{{institute.lat}}" data-lng="{{institute.lng}}">
              </span>
              <footer>
                <a
                  target="_blank"
                  href="https://maps.google.com/mobile?q={{institute.lat}},{{institute.lng}}&z=15"
                > Ver rotas no Google Maps</a>
              </footer>
            </div>

            <hr />

            <h2>Instruções para visitas</h2>

            <p>{{institute.instructions}}</p>

            <div class="open-details">
              <div class="hour">
                <img src="/images/clock.svg" alt="Horários" />
                {{institute.opening_hours}}
              </div>

              {{#if institute.open_on_weekends}}
                <div class="open-on-weekends open">
                  <img src="/images/info.svg" alt="Informação" />
                  Atendemos fim de semana
                </div>
              {{else}}
                <div class="open-on-weekends closed">
                  <img src="/images/info-red.svg" alt="Informação" />
                  Não atendemos fim de semana
                </div>
            {{/if}}
          </div>
            <a
              href="https://api.whatsapp.com/send?l=pt_BR&phone={{institute.whatsapp}}&text=Oi, quero conversar sobre visitar no {{institute.name}}"
              target="_blank"
              class="primary-button"
              type="button"
            >
              <img src="/images/whatsapp.svg" alt="Chamar no whatsapp" />
              Entrar em contato
            </a>
          </div>
        </div>
      </main>
    </div>
    <script src="/scripts/page-institute.js"></script>
  </body>
</html>